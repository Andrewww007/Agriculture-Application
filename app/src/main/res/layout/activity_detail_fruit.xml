<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailFruit">


    <ImageView
        android:id="@+id/bBack"
        android:layout_width="49dp"
        android:layout_height="46dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="347dp"
        android:layout_marginBottom="670dp"
        android:src="@drawable/back" />


    <TextView
        android:layout_width="226dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="96dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="89dp"
        android:layout_marginBottom="669dp"
        android:text="List Fruit"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textSize="40sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="0dp"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Apple -->
        <RelativeLayout
            android:layout_width="394dp"
            android:layout_height="85dp"
            android:layout_marginBottom="8dp"
            android:background="@android:color/white"
            android:padding="8dp">

            <ImageView
                android:id="@+id/apple_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:src="@drawable/apple" />

            <TextView
                android:id="@+id/apple_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@id/apple_image"
                android:text="Apple"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/apple_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/apple_name"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@id/apple_name"
                android:text="$1.99"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/apple_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/apple_name"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:layout_toEndOf="@id/apple_image"
                android:text="Fresh and juicy apple"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/aadd"
                android:layout_width="65dp"
                android:layout_height="62dp"

                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="281dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="26dp"
                android:layout_marginBottom="7dp"
                android:src="@drawable/add1" />


        </RelativeLayout>

        <!-- Repeat similar blocks for other fruits -->
        <!-- Banana -->
        <RelativeLayout
            android:layout_width="395dp"
            android:layout_height="79dp"
            android:layout_marginBottom="8dp"
            android:background="@android:color/white"
            android:padding="8dp">

            <ImageView
                android:id="@+id/banana_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
