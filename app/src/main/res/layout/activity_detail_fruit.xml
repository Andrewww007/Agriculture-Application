            <TextView
                android:id="@+id/banana_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@id/banana_image"
                android:text="Banana"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/banana_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/banana_name"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@id/banana_name"
